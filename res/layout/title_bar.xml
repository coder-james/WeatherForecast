<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_background"
        android:gravity="center_vertical">
    <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:src="@drawable/title_city"/>
    <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1dp"
            android:layout_height="@dimen/title_image_height"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="@color/title_seperator"/>
    <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/title_text"
            android:textSize="22sp"/>
    <ImageView
            android:id="@+id/title_update"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:layout_alignParentRight="true"
            android:src="@drawable/title_update"/>
    <ImageView
            android:id="@+id/title_update_anim"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:layout_alignParentRight="true"
            android:src="@drawable/title_update"
            android:visibility="gone"/>
    <ImageView
            android:id="@+id/title_share"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:layout_toLeftOf="@id/title_update"
            android:src="@drawable/title_share"/>
    <ImageView
            android:id="@+id/title_location"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>
</RelativeLayout>